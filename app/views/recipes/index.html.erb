<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Recipe Finder</title>
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        input { width: 300px; padding: 10px; margin-right: 10px; }
        button { padding: 10px 15px; }
        .recipe { margin: 20px 0; }
        .highlight { color: green; font-weight: bold; }
        .spinner {
            display: none;
            border: 4px solid rgba(0, 0, 0, 0.1);
            border-left-color: #22a6b3;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <h1>Recipe Finder</h1>
    <input id="ingredients" type="text" placeholder="Enter ingredients (comma-separated)">
    <button onclick="searchRecipes()">Find Recipes</button>
    <div id="spinner" class="spinner"></div>
    <div id="recipes"></div>

    <script>
        function convertImageUrl(originalUrl) {
            if (!originalUrl) {
                return originalUrl;
            }
            const urlParam = originalUrl.match(/url=(.+)$/);
            if (urlParam && urlParam[1]) {
                return decodeURIComponent(urlParam[1]);
            }
            // Return the original URL if no conversion is needed
            return originalUrl;
        }

        async function searchRecipes() {
            const ingredients = document.getElementById('ingredients').value;
            const searchTerms = ingredients.split(',').map(term => term.trim().toLowerCase());
            const spinner = document.getElementById('spinner');
            spinner.style.display = 'block';

            const response = await fetch('<%= url_for(controller: 'recipes', action: 'search', only_path: true) %>?ingredients=' + encodeURIComponent(ingredients));
            const recipes = await response.json();

            spinner.style.display = 'none';

            const recipesContainer = document.getElementById('recipes');
            recipesContainer.innerHTML = '';

            recipes.forEach(recipe => {
                const recipeDiv = document.createElement('div');
                recipeDiv.className = 'recipe';
                const ingredientsList = recipe.ingredients.map(ingredient => {
                    const ingredientName = ingredient.name.toLowerCase();
                    const isMatch = searchTerms.some(term => ingredientName.includes(term));
                    return `<li class="${isMatch ? 'highlight' : ''}">${ingredient.name}</li>`;
                }).join('');
                console.log(recipe.image_url);
                const imageUrl = convertImageUrl(recipe.image_url);
                recipeDiv.innerHTML = `
                    <h2>${recipe.title}</h2>
                    <p><strong>Prep Time:</strong> ${recipe.prep_time} mins</p>
                    <p><strong>Cook Time:</strong> ${recipe.cook_time} mins</p>
                    <p><strong>Ratings:</strong> ${recipe.ratings}</p>
                    <img src="${imageUrl}" alt="${recipe.title}" style="width: 200px;">
                    <h3>Ingredients:</h3>
                    <ul>${ingredientsList}</ul>
                `;
                recipesContainer.appendChild(recipeDiv);
            });
        }
    </script>
</body>
</html>